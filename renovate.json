{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "renovatebot",
    "dependencies"
  ],
  "extends": [
    "config:recommended",
    "customManagers:githubActionsVersions"
  ],
  "minimumReleaseAge": "0 days",
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "goreleaser/goreleaser-pro"
      ],
      "extractVersion": "^(?<version>.*)-pro$"
    },
    {
      "matchPackageNames": [
        "goreleaser-pro"
      ],
      "groupName": "GoReleaser Pro"
    }
  ]
}
